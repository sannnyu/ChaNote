<Window x:Class="ChaNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChaNote"
        mc:Ignorable="d"
        Title="ChaNote"  Height="250" Width="250" Topmost="True" Closing="Window_Closing" WindowStyle="SingleBorderWindow"
        WindowStartupLocation="Manual" 
        AllowsTransparency="False" Opacity="1" 
        KeyDown="Window_KeyDown">

    <Grid>
       
            <!-- 文本框，用于输入笔记 -->
            <TextBox Name="NoteTextBox"  TextWrapping="Wrap" Background="White"  FontSize="18" AcceptsReturn="True" AcceptsTab="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        
    </Grid>
</Window>
